<iframe
  width="400"
  height="300"
  style="border:0"
  loading="lazy"
  allowfullscreen
  referrerpolicy="no-referrer-when-downgrade"
  src="https://www.google.com/maps/embed/v1/directions?key=<%=ENV["GOOGLE_API_KEY"] %>
    &origin=<%=@flight.user_departure_address%>
    &destination=<%= @flight.destination%>
    &avoid=tolls|highways">
</iframe>
