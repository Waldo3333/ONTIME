
<h1 class="text-center fw-bold text-black">Ajouter un vol</h1>
<div class="container py-4">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for @flight do |f| %>
              <%= f.input :flight_number, label: "Numéro de vol"%>
              <%= f.input :user_departure_address,
                          input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                          wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value:ENV["MAPBOX_API_KEY"]}},
                          label: "Adresse de départ de l’utilisateur" %>
              <%= f.input :valise, as: :boolean %>
              <%= f.input :mobility_choice, collection: Flight.mobility_choices.keys, label: "Votre moyen de locomotion" %>
              <%= f.input :arrival_time_wanted, label: "Combien de temps avant votre vol voulez vous être à votre porte d'embarquement" %>
              <div class="d-grid gap-2 mt-3 py-3">
                  <%= f.button :submit, "Créer le vol", class: "btn btn-primary text-white py-3 rounded-pill" %>
              </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

