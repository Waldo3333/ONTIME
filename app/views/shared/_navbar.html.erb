<% if current_user %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid justify-content-around">

      <div class="navbar-item-width">
        <button class="navbar-toggler navbar-profil-button" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "navbar_profil_pic", alt: "dropdown menu" %>
          <% else %>
             <%= image_tag "https://static.vecteezy.com/system/resources/previews/024/983/914/non_2x/simple-user-default-icon-free-png.png", class: "navbar_profil_pic", alt: "default avatar" %>
        <% end %>
        </button>
      </div>
      <div class="navbar-item-width">

          <%= link_to root_path, class: "navbar-logo" do %>
            <%= image_tag "Avion-logo.png" %>
          <% end %>

      </div>

      <div class="navbar-item-width">
        <%= link_to tasks_path do %>
          <i class="fa-solid fa-list"></i>
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Modifier profil", edit_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
            </li>

            <li class="nav-item dropdown">
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Action", "#", class: "dropdown-item" %>
                <%= link_to "Autre action", "#", class: "dropdown-item" %>
                <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
